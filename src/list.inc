 #ifndef _LIST_INC_
 #define _LIST_INC_
 .include "object.inc"
 .include "listItem.inc"
 .CSEG

 .equ _head = _object_size
 .equ _tail = _head + pointerSize
 .equ _list_size = _tail + pointerSize

 list: CLASS object, _list_size
 list_ctor:
		BEGIN_TINY
			clr AL
			FIELD_WST _head, AL, AL
			FIELD_WST _tail, AL, AL
			OVERRIDE object_destroy, list_destructor
		END_TINY
 list_getHead: GETTERW _head
 list_destructor:
	BEGIN_SMALL
		
		FIELD_WLD _head, AH, AL

		list_destructor_test:
		tst AH
		brne list_destructor_item
		tst AL
		breq list_destructor_this

		list_destructor_item:
		XCALL AH:AL, listItem_getNext
		movw BH:BL, RH:RL
		DEL AH:AL
		movw AH:AL, BH:BL

		rjmp list_destructor_test

		list_destructor_this:

		THIS object_destructor

	END_SMALL

 list_add: ; A - item pointer; B - tail pointer
	.equ list_add_item = 0
	BEGIN_SMALL

				PARAM_WLD list_add_item, AH, AL
				FIELD_WLD _tail, BH, BL

				XCALLW AH:AL, listItem_setPrev, BH, BL

				; if this is the first element then set Tail and Head
				tst BH
				brne list_add_setNext
				tst BL
				brne list_add_setNext

				FIELD_WST _tail, AH, AL
				FIELD_WST _head, AH, AL

				rjmp list_add_exit

	list_add_setNext:
				; set next for Tail
				XCALLW BH:BL, listItem_setNext, AH, AL
				FIELD_WST _tail, AH, AL

	list_add_exit:
	END_SMALL

 list_remove:
 .equ list_remove_item = 0; C-current item; A - item to find; D - temp
	BEGIN
							PARAM_WLD list_remove_item, AH, AL
							FIELD_WLD _head, CH, CL

		list_remove_check:
							cp AH, CH
							brne list_remove_next
							cp AL, CL
							brne list_remove_next

							rjmp list_remove_remove

		list_remove_next:
							XCALL CH:CL, listItem_getNext
							; in R we have reference to item
							movw CH:CL, RH:RL
							tst CL
							brne list_remove_check
							tst CH
							brne list_remove_check
							rjmp list_remove_exit

		list_remove_remove: 

							XCALL CH:CL, listItem_getPrev
							movw AH:AL, CH:CL
							XCALL CH:CL, listItem_getNext
							movw BH:BL, CH:CL

							XCALLW AH:AL, listItem_setNext, BH, BL
							XCALLW BH:BL, listItem_setPrev, AH, AL

		list_remove_exit:
	END

 list_get:
	.equ _index = 0; B - current index; C-current item; A - index to find; D - temp
	BEGIN
							PARAM_WLD _index, AH, AL
							FIELD_WLD _head, CH, CL
							
							ldi BH, -1
							ldi BL, -1

		list_get_check:
							subi BL, -1
							sbci BH, 0

							cp AH, BH
							brne list_get_next
							cp AL, BL
							brne list_get_next

							movw RH:RL, CH:CL

							rjmp list_get_exit

		list_get_next:
							
							XCALL CH:CL, listItem_getNext
							; in R we have reference to item
							movw CH:CL, RH:RL
							tst CL
							brne list_get_check
							tst CH
							brne list_get_check
							; no item found
							clr RH
							clr RL
		list_get_exit: 
	END

 #endif /* _LIST_INC_ */
